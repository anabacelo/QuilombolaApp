<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/aclonica_regular</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="estiloTextoTituloNormal">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/aclonica_regular</item>
    </style>

    <style name="estiloTextoTitulo">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="estiloTextoLayoutCentralizadoDireitosReservados">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="estiloTextoLayoutDireitaDireitosReservados">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="estiloTextoLayoutEsquerdaDireitosReservados">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="estiloTextoConteudo">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="estiloTextoComplemento">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="estiloImagem">
        <item name="android:padding">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="estiloLink">
        <item name="android:autoLink">web</item>
        <item name="android:clickable">true</item>
        <item name="android:linksClickable">true</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>
</resources>