<resources>

    <!-- Tema principal da aplicação -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/aclonica_regular</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Estilos de texto -->
    <style name="TextoBase">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="estiloTextoTituloNormal" parent="TextoBase">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:fontFamily">@font/aclonica_regular</item>
    </style>

    <style name="estiloTextoTitulo" parent="TextoBase">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="estiloTextoLayoutCentralizadoDireitosReservados" parent="TextoBase">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="estiloTextoLayoutDireitaDireitosReservados" parent="TextoBase">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="estiloTextoLayoutEsquerdaDireitosReservados" parent="TextoBase">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="estiloTextoConteudo" parent="TextoBase">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="estiloTextoComplemento" parent="TextoBase">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <!-- Estilos de Imagem -->
    <style name="estiloImagem">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- Estilo para links -->
    <style name="estiloLink" parent="TextoBase">
        <item name="android:autoLink">web</item>
        <item name="android:clickable">true</item>
        <item name="android:linksClickable">true</item>
    </style>

</resources>
