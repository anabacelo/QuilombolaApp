<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_estatudo_igualdade_racial"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/title_texto_artigo_data_lei_maria_da_penha"
                android:text="@string/texto_artigo_data_lei_maria_da_penha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoComplemento" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/text_view_title_texto_os_mecanismos_da_lei"
                android:layout_below="@+id/title_texto_artigo_data_lei_maria_da_penha"
                android:text="@string/title_texto_os_mecanismos_da_lei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoTituloNormal" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/title_texto_artigo_commplemento_lei_maria_da_penha"
                android:layout_below="@+id/text_view_title_texto_os_mecanismos_da_lei"
                android:text="@string/texto_artigo_commplemento_lei_maria_da_penha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoComplemento" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
