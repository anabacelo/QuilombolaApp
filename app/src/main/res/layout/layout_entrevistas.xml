<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_entrevistas"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTextoEntrevistaAlpes"
                android:text="@string/titulo_video_quilopoa03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoComplemento" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textViewLinkEntrevistaAlpes"
                android:layout_below="@+id/textViewTextoEntrevistaAlpes"
                android:text="@string/video_quilopoa03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                style="@style/estiloTextoConteudo" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textViewTextoEntrevistaArealDaBaronesa"
                android:layout_below="@+id/textViewLinkEntrevistaAlpes"
                android:text="@string/textoEntrevistaArealDaBaronesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:layout_alignParentStart="true"
                style="@style/estiloTextoConteudo" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textViewLinkEntrevistaArealDaBaronesa"
                android:layout_below="@+id/textViewTextoEntrevistaArealDaBaronesa"
                android:text="@string/linkTextoEntrevistaArealDaBaronesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                style="@style/estiloTextoConteudo" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textViewEntrevistaQuilomboFidelix"
                android:layout_below="@+id/textViewLinkEntrevistaArealDaBaronesa"
                android:text="@string/textoEntrevistaQuilomboFidelix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_alignParentStart="true"
                style="@style/estiloTextoConteudo" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textViewLinkEntrevistaQuilomboFidelix"
                android:layout_below="@+id/textViewEntrevistaQuilomboFidelix"
                android:text="@string/linkEntrevistaQuilomboFidelix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_alignParentStart="true"
                style="@style/estiloTextoConteudo" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textViewEntrevistaQuilomboSilva"
                android:layout_below="@+id/textViewLinkEntrevistaQuilomboFidelix"
                android:text="@string/textoEntrevistaQuilomboSilva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_alignParentStart="true"
                style="@style/estiloTextoConteudo" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textViewLinkEntrevistaQuilomboSilva"
                android:layout_below="@+id/textViewEntrevistaQuilomboSilva"
                android:text="@string/linkEntrevistaQuilomboSilva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_alignParentStart="true"
                style="@style/estiloTextoConteudo" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>