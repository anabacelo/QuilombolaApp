<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_quilombo_alpes"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewQuilomboDosAlpes"
                android:text="@string/titulo_quilopoa01"
                android:layout_below="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoTitulo" />

            <ImageView
                android:id="@+id/imageViewQuilomboDosAlpes"
                android:layout_below="@+id/textViewQuilomboDosAlpes"
                android:src="@drawable/quilombodosalpes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginBottom="10dp" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewTextoDireitosLayoutQuilomboDosAlpes"
                android:layout_below="@id/imageViewQuilomboDosAlpes"
                android:text="@string/textoDireitosLayoutQuilomboDosAlpes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoDireitosReservados" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewTextoLayoutQuilomboDosAlpes"
                android:layout_below="@+id/textViewTextoDireitosLayoutQuilomboDosAlpes"
                android:text="@string/texto_quilopoa01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoLink="web"
                android:linksClickable="true"
                style="@style/estiloTextoConteudo" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>