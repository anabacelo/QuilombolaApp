<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_quilombo_fidelix"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewquilo2"
                android:text="@string/titulo_quilomboFidelix"
                android:layout_below="@+id/textquilosilva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginTop="21dp" />

            <TextView
                android:id="@+id/textquilofidelix"
                android:text="@string/texto_quilopoa04"
                android:layout_below="@+id/textViewquilo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="21dp"
                android:textAlignment="center"
                android:layout_marginTop="21dp"
                android:layout_alignParentStart="true"
                android:autoLink="web"
                android:linksClickable="true"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textquilofidelix"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_marginTop="21dp"
                android:text="@string/titulo_video_quilopoa01" />

            <TextView
                android:id="@+id/textView7"
                android:text="@string/video_quilopoa01"
                android:layout_below="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="21sp"
                android:textAlignment="center"
                android:layout_marginTop="21dp"
                android:layout_alignParentStart="true"
                android:autoLink="web"
                android:linksClickable="true"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
