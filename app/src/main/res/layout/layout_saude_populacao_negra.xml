<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_saude_populacao_negra"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageViewPopulacaoNegra"
                android:src="@drawable/saudepopulacaonegra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloImagem"/>

            <TextView
                android:id="@+id/textViewTituloPopulacaoNegra"
                android:layout_below="@+id/imageViewPopulacaoNegra"
                android:text="@string/titulo_popnegra01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoDireitosReservados" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewTextoPopulacaoNegra"
                android:layout_below="@+id/textViewTituloPopulacaoNegra"
                android:text="@string/texto_popnegra01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                style="@style/estiloTextoComplemento" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>