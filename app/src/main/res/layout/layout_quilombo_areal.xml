<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView4"
                    android:text="@string/tituloQuilomboAreal02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/estiloTextoTitulo" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:src="@drawable/quiloareal"
                    android:layout_below="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textAlignment="center" />

                <com.example.anapaula.quilombolaappv4.JustifyTextView
                    android:id="@+id/textView5"
                    android:layout_below="@+id/imageView3"
                    android:text="@string/texto_quilopoa02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:autoLink="web"
                    android:linksClickable="true"
                    style="@style/estiloTextoConteudo" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:src="@drawable/quiloareal02"
                    android:layout_below="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>