<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_quilombo_lemos"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewLayoutQuilomboLemos"
                android:text="@string/titulo_quilomboLemos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoTitulo" />

            <ImageView
                android:id="@+id/imageViewLayoutQuilomboLemos"
                android:layout_below="@id/textViewLayoutQuilomboLemos"
                android:src="@drawable/quilombo_lemos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloImagem" />

            <TextView
                android:id="@+id/textViewTextoDireitosLayoutQuilomboLemos"
                android:layout_below="@id/imageViewLayoutQuilomboLemos"
                android:text="@string/textoDireitosLayoutQuilomboLemos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoLayoutEsquerdaDireitosReservados" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textquiloLemos"
                android:layout_below="@+id/textViewTextoDireitosLayoutQuilomboLemos"
                android:text="@string/textoComplementoQuilomboLemos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                style="@style/estiloTextoConteudo" />

            <com.example.anapaula.quilombolaappv4.components.JustifyTextView
                android:id="@+id/textViewReferenciaQuilomboLemos"
                android:layout_below="@+id/textquiloLemos"
                android:text="@string/textoReferenciaQuilomboLemos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                style="@style/estiloTextoComplemento" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>