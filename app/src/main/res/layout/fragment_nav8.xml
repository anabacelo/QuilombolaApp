<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anapaula.quilombolaappv4.Nav8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewRepresentaQuilombo8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:textSize="26sp"
            android:text="Representações Quilombolas" />

        <TextView
            android:id="@+id/textViewCoordenacaoNacional"
            android:layout_below="@id/textViewRepresentaQuilombo8"
            android:text="@string/textoCoordenacaoNacional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewConaq"
            android:layout_below="@id/textViewCoordenacaoNacional"
            android:text="@string/textoConaq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewFrenteQuilombola"
            android:layout_below="@id/textViewConaq"
            android:text="@string/textoFrenteQuilombola"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:autoLink="web"
            android:linksClickable="true"
            android:textAlignment="center"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
