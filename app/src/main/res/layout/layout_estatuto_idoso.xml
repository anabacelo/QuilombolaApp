<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_estatuto_idoso"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.anapaula.quilombolaappv4.Nav3">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewLayoutTituloEstatutoDoIdoso"
                android:text="@string/tituloLeiEstatutoDoIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoTituloNormal" />

            <ImageView
                android:layout_below="@+id/textViewLayoutTituloEstatutoDoIdoso"
                android:id="@+id/imageViewEstatudoDoIdoso"
                android:src="@drawable/estatudoidosos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloImagem" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewDireitosImagemEstatudoDoIdoso"
                android:layout_below="@id/imageViewEstatudoDoIdoso"
                android:text="@string/textoDireitosImagemEstatudoDoIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoLayoutEsquerdaDireitosReservados" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewLayoutTextoEstatutoDoIdoso"
                android:layout_below="@+id/textViewDireitosImagemEstatudoDoIdoso"
                android:text="@string/textoLeiEstatutoDoIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                style="@style/estiloTextoConteudo" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewLayoutTextoReferenciaEstatutoDoIdoso"
                android:layout_below="@+id/textViewLayoutTextoEstatutoDoIdoso"
                android:text="@string/textoReferenciaLeiEstatutoDoIdoso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                style="@style/estiloTextoConteudo" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>