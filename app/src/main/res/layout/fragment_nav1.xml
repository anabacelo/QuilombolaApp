<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anapaula.quilombolaappv4.Nav1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTituloOqueESerQuilombola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_oqeh01"
                style="@style/estiloTextoTitulo" />

            <ImageView
                android:id="@+id/imageViewLayouOqueESerQuilombola"
                android:layout_below="@id/textViewTituloOqueESerQuilombola"
                android:src="@drawable/oqueeserquilombola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloImagem" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewTextoDireitosLayoutOqueESerQuilombola"
                android:layout_below="@id/imageViewLayouOqueESerQuilombola"
                android:text="@string/textoDireitosImagemOqueESerQuilombola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoDireitosReservados" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewTexto"
                android:layout_below="@+id/textViewTextoDireitosLayoutOqueESerQuilombola"
                android:text="@string/textViewOqueESerQuilombola"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoConteudo" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>