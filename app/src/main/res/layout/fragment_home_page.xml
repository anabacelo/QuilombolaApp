<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentHomePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anapaula.quilombolaappv4.HomePage">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTituloLayoutPaginaInicial"
                android:text="@string/tituloLayoutPaginaInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoTitulo" />

            <ImageView
                android:id="@+id/imageViewLogoResistenciaNegra"
                android:layout_below="@+id/textViewTituloLayoutPaginaInicial"
                android:src="@drawable/img_capa_resitencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloImagem" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewTextoDireitoAutoralDaImagem"
                android:text="@string/textoDireitoAutoralDaImagemDoAdalbertoReisDosSantos"
                android:layout_below="@+id/imageViewLogoResistenciaNegra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoDireitosReservados" />

            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewTextoLayoutPaginaInicial"
                android:layout_below="@+id/textViewTextoDireitoAutoralDaImagem"
                android:text="@string/textoLayoutPaginaInicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoConteudo" />


            <com.example.anapaula.quilombolaappv4.JustifyTextView
                android:id="@+id/textViewTextoLayoutPaginaInicialRodape"
                android:layout_below="@+id/textViewTextoLayoutPaginaInicial"
                android:text="@string/textoLayoutPaginaInicialRodape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/estiloTextoComplemento" />


            <RelativeLayout
                android:layout_below="@+id/textViewTextoLayoutPaginaInicialRodape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="73dp"
                    android:layout_height="92dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="52dp"
                    android:layout_weight="50"
                    android:src="@drawable/pucrs2" />

                <ImageView
                    android:id="@+id/imageView4"

                    android:layout_width="135dp"
                    android:layout_height="68dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="83dp"
                    android:layout_marginBottom="-2dp"
                    android:src="@drawable/cnpq" />

                <ImageView
                    android:id="@+id/imageView5"

                    android:layout_width="161dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="-2dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/fapergs" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>